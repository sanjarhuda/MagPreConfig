<?xml version="1.0"?>
<config>
	<tabs>
		<magestore translate="label">
			<label>PEER SYSTEM</label>
			<sort_order>2</sort_order>
		</magestore>
	</tabs>
	<sections>
		<bannerslider translate="label" module="bannerslider">
			<label>Banner Slider</label>
			<tab>magestore</tab>
			<frontend_type>text</frontend_type>
			<sort_order>999</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				
				
				<settings translate="label">
				<label>Banner Slider Settings</label>
				<frontend_type>text</frontend_type>
				<sort_order>2</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
					<fields>
						<enable translate="label, comment">
							<label>Enable Banner</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</enable>
						<time_delay translate="label, comment">
							<label>Slider Interval</label>
							<comment><![CDATA[in milisecond. - Default is 7000 ms  ]]></comment>
							<frontend_type>text</frontend_type>
							<validate>validate-digits</validate>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</time_delay>
						<show_description translate="label, comment">
							<label>Show description</label>
							<comment><![CDATA[show description in front of image]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show_description>
						<effect translate="label, comment">
							<label>Easing effect</label>
							<comment><![CDATA[image effect]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>bannerslider/system_config_effect</source_model> 
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</effect>
						<mode translate="label, comment">
							<label>Slide Mode</label>
							<comment><![CDATA[image effect]]></comment>
							<frontend_type>select</frontend_type>
							<source_model>bannerslider/system_config_mode</source_model> 
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</mode>
						
						
					
					</fields>
				</settings>
				
				
			</groups>
		</bannerslider>
	</sections>
</config>